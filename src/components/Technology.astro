---
import { getLangFromUrl } from "../utilities/getLangFromUrl";
import { useTranslations } from "../utilities/useTranslations";

interface Props {
  id: string;
}

const { id } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<li class="flex mobile:gap-x-[16px] tablet:gap-x-[22px]">
  <div class="icon-wrapper">
    <slot />
  </div>

  <div class="flex flex-col justify-center">
    <h3
      class="text-muted mobile:text-[24px] tablet:text-[32px] font-poppins-semibold"
    >
      {t(`technology.${id}.name` as keyof typeof t)}
    </h3>
    <h4
      class="text-muted-strong mobile:text-[16px] tablet:text-[20px] font-poppins-regular"
    >
      {t(`technology.${id}.description` as keyof typeof t)}
    </h4>
  </div>
</li>
